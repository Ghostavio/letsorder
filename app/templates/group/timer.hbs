<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h2>Set timer</h2>
      <div class="row">
        <div class="col-md-12">
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-default btn-lg active">
              <input type="radio" name="setTimer" id="" autocomplete="off" checked> 5
            </label>
            <label class="btn btn-default btn-lg">
              <input type="radio" name="setTimer" id="" autocomplete="off"> 10
            </label>
            <label class="btn btn-default btn-lg">
              <input type="radio" name="setTimer" id="" autocomplete="off"> 15
            </label>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-12">
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-lg">Current location</button>
            <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a>Home</a></li>
              <li><a>Office</a></li>
              <li><a>Joe's place</a></li>
            </ul>
          </div>
        </div>
      </div>
      <br>
      <button class="btn btn-success btn-lg" {{ action "setOrder" }} >Start!</button>
    </div>
    <div class="col-xs-4">
      <h2>{{ content.name }}</h2>
      <img {{ bind-attr src=content.picture }} class="restaurant-logo img-rounded">
    </div>
  </div>
</div>

