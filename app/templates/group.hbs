<div class="container">

  <div class="row">
    <div class="col-md-12">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default btn-success btn-lg active">
        <input type="checkbox" name="" id="" autocomplete="off"> Groups
        </label>
        <label class="btn btn-default btn-success btn-lg">
          <input type="checkbox" name="" id="" autocomplete="off"> Friends
        </label>
      </div>
   {{!--    {{#link-to 'group/new' classNames='btn btn-lg btn-default'}}
        {{ fa-icon "plus" }} Create group
      {{/link-to}} --}}
      {{#link-to 'group/restaurants' classNames='btn btn-lg btn-default pull-right'}}
        I'm eating alone
      {{/link-to}}
{{!--       <button class="btn btn-default btn-lg">I'm eating alone</button> --}}
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-12">
      <h3>Groups</h3>
      {{#each group in content.groups }}
      <div class="col-md-2 col-sm-3 col-xs-6 group">
        {{#link-to 'group/restaurants' group classNames='group-name capitalize'}}
          {{#if group.picture }} <img {{ bind-attr src=group.picture }} class="group-logo img-circle"> {{ else }} <img src="/assets/images/default-group-picture.svg" class="group-logo img-circle"> {{/if}}
          {{#if group.name }} {{ group.name }} {{ else }} Untitled {{/if}}
        {{/link-to}}
      </div>
      {{ else }}
        <p>You have no groups dude :(</p>
        <p>Create one!</p>
      {{/each}}
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-md-12">
      <h3>Friends</h3>
      {{#link-to '' classNames='btn btn-lg btn-default'}}
        {{ fa-icon "plus" }} Add friend
      {{/link-to}}
      <br>
      {{#each group in content.friends }}
      <div class="col-md-2 col-sm-3 col-xs-6 group">
        {{#link-to 'group/restaurants' group classNames='group-name capitalize'}}
          {{#if group.picture }} <img {{ bind-attr src=group.picture }} class="group-logo img-circle"> {{ else }} <img src="/assets/images/default-user-picture.svg" class="group-logo img-circle"> {{/if}}
          {{#if group.name }} {{ group.name }} {{ else }} Untitled {{/if}}
        {{/link-to}}
      </div>
      {{ else }}
        <p>You have no friends dude :(</p>
      {{/each}}
    </div>
  </div>

</div>
