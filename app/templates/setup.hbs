<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form {{ action "setupUser" on="submit" }}>
        <div class="form-group">
          {{ input name="username" value=content.username classNames='form-control' placeholder="Please pick a username" }}
        </div>
        <div class="form-group">
          {{ input name="phone" value=content.phone classNames='form-control' placeholder="Phone number" }}
        </div>
        <button class="btn btn-success btn-lg" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
